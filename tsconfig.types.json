{
    "compilerOptions": {
        "rootDir": "lib",
        "outDir": "dist/lib",
        "typeRoots": ["node_modules/@types"],
        "tsBuildInfoFile": "node_modules/.tmp/tsconfig.types.tsbuildinfo",

        "target": "esnext",
        "moduleResolution": "node",

        "strict": false,
        // "composite": true,
        "declaration": true,
        "emitDeclarationOnly": true,
    },
    "include": [
        "typings/**/*.d.ts",
        "lib/**/*",
    ]
}
